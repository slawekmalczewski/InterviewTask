<div class="container">
  <div class="row mt-2">
    <div class="col-12">
      <h3>Data retrieved from JSON file:</h3>
    </div>
  </div>

  <div class="form-horizontal">

    <%= form_with(model: @message, local: true) do |form| %>
    <div class="form-group row">
      <%= form.label :first_name, :class => 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :message_first_name, :value => @message.retrieve_first_name_from_json, :readonly=> true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :last_name, :class => 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :message_last_name, :value => @message.retrieve_last_name_from_json, :readonly=> true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :email, :class => 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :message_email, :value => @message.retrieve_email_from_json, :readonly=> true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :amount, :class => 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :message_amount, :value => @message.retrieve_amount_from_json, :readonly=> true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= form.submit "Save Message Data", :class => 'btn btn-success' %>
      </div>
    </div>
    <% end %>
  </div>

</div>
