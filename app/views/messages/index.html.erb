<div class="container">
  <div class="row mb-5">
    <div class="col-12">
      <%= link_to("New Message", {:action => 'new'}, :class => "btn btn-success btn-lg btn-block") %>
    </div>
  </div>

<div class="row text-center">
  <div class="col-md-6 mb-3">
    <form class="" action="search">
      <input name="q" type="text" placeholder="Search by email" aria-label="Search">
      <button type="submit" class="btn btn-info">Search</button>
    </form>
  </div>

  <div class="col-md-6 mb-3">
    <%= link_to({:controller => 'messages', :action => 'search_range'}, :class => 'btn btn-info btn-md btn-block') do%>
    <i class="fa fa-search"> Search by date range</i>
    <% end %>
  </div>
</div>

<div class="row mt-4">
  <div class="col-10">
    <h4>Transacations: <span class="small">/Click table headers to sort the columns back and forth/</span></h4>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="table-responsive">
      <table class="table table-bordered table-striped mt-1 admin-table">
        <thead>
          <tr>
            <th class="align-middle text-center table-header-text w-25">Email</th>
            <th class="pretty align-middle text-center table-header-text w-25"><%= sortable("message_first_name") %></th>
            <th class="pretty align-middle text-center table-header-text w-15"><%= sortable("message_last_name") %></th>
            <th class="pretty align-middle text-center table-header-text w-15"><%= sortable("message_amount") %></th>
            <th class="pretty align-middle text-center table-header-text w-20"><%= sortable("created_at") %></th>
          </tr>
        </thead>
        <tbody>
          <% @search_item.each do |m| %>
          <tr>
            <td class="span1 align-middle text-center"><%= m.message_email %></td>
            <td class="span2 align-middle text-center"><%= m.message_first_name %></td>
            <td class="span1 align-middle text-center"><%= m.message_last_name %></td>
            <td class="span1 align-middle text-center"><%= m.message_amount %></td>
            <td class="span1 align-middle text-center"><%= m.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</div>
